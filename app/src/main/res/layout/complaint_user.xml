<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relative_1"
    >
    <Button
        android:id="@+id/citizen_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/et_bg"
        />
    <ImageView
        android:id="@+id/citizen_picture"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/citizen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/citizen_picture"
        android:layout_marginLeft="112dp"
        android:text="Citizen"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="35dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/citizen_text"
        android:src="@mipmap/ic_launcher"
        android:paddingTop="15dp"
        android:layout_marginLeft="90dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/citizen_button"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/mcgm_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/et_bg"
            />
        <ImageView
            android:id="@+id/mcgm_picture"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/mcgm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mcgm_picture"
            android:layout_marginLeft="112dp"
            android:text="Admin"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="35dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mcgm_text"
            android:src="@mipmap/ic_launcher"
            android:paddingTop="15dp"
            android:layout_marginLeft="90dp"/>


    </RelativeLayout>


</RelativeLayout>
